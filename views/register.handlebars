<body>
  <div class="nav">
  <nav>
    <ul>
      <li><span class="glyphicon glyphicon-home"</span><a href="http://localhost:5000">Home</a></li>
      <li><span class="glyphicon glyphicon-user"</span><a href="http://localhost:5000/profile">My Profile</a></li>
      <li><span class="glyphicon glyphicon-search"</span><a href="http://localhost:5000/api/profile/all">Find</a></li>
      <!-- Add login and logout logic for signup, login and logout -->
      <li><a id="access" href="http://localhost:5000/login">Login</a>
        <a id="access" href="http://localhost:5000/register">Sign Up</a></li>
    </ul>
  </nav>
  </div>

  <div class="wrapper">
      <form class="form-signin" method="post" action="http://localhost:5000/api/users/register">
        <h2 class="form-signin-heading">Welcome to QHC, Please Register Below</h2>
        <input type="text" class="form-control" name="name" placeholder="Your Name"  autofocus="" />
        <input type="text" class="form-control" name="email" placeholder="Email Address"  autofocus="" />
        <input type="password" class="form-control" name="password" placeholder="Password" />
        <input type="password" class="form-control" name="password2" placeholder="Confirm Password" />
        <label class="checkbox">
          <input type="checkbox" value="remember-me" id="rememberMe" name="rememberMe"> Remember me
        </label>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
      </form>
    </div>

    {{#if errors}}
  <div class="errors">
    {{#if errors.name}}
    <h4 class="errors">*{{errors.name}}</h4>
    {{/if}}
  {{#if errors.email}}
  <h4 class="errors">*{{errors.email}}</h4>
  {{/if}}
  {{#if errors.password}}
  <h4 class="errors">*{{errors.password}}</h4>
  {{/if}}
  {{#if errors.password2}}
  <h4 class="errors">*{{errors.password2}}</h4>
  {{/if}}
  {{#if errors.passwordConfirm}}
  <h4 class="errors">*{{errors.passwordConfirm}}</h4>
  {{/if}}
</div>
{{/if}}



  <footer>
  <p>Copyright 2018</p>
  </footer>



