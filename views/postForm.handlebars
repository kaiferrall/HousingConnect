<body>
  <div class="nav">
  <nav>
    <ul>
      <li><span class="glyphicon glyphicon-home"</span><a href="http://localhost:5000">Home</a></li>
      <li><span class="glyphicon glyphicon-user"</span><a href="http://localhost:5000/profile">My Profile</a></li>
      <li><span class="glyphicon glyphicon-search"</span><a href="http://localhost:5000/api/profile/all">Find</a></li>
      <li><span class="glyphicon glyphicon-share-alt"</span><a href="http://localhost:5000/api/posts/feed">Feed</a></li>
      <!-- Add login and logout logic for signup, login and logout -->
      {{#if login}}
        <li><a id="access" href="http://localhost:5000/api/users/logout">Logout</a>
        {{else}}
        <li><a id="access" href="http://localhost:5000/login">Login</a>
          <a id="access" href="http://localhost:5000/register">Sign Up</a></li>
        {{/if}}
    </ul>
  </nav>
  </div>

  <div class="wrapper">
      <form class="form-signin" method="post" action="http://localhost:5000/api/posts/create">
        <h2 class="form-signin-heading">Want to say something?</h2>
        <input type="text" class="form-control" name="title" placeholder="Give your post a title"  autofocus="" />
        <textarea class="form-control" rows="5" name="text" placeholder="What do you want to say?" ></textarea>
        <input type="text" class="form-control" name="type" placeholder="Tell people what kind of post this is"  autofocus="" />
        <button class="btn btn-lg btn-success btn-block" type="submit">Post</button>
      </form>
    </div>

    {{#if errors}}
  <div class="errors">
    {{#if errors.title}}
      <h4 class="errors">*{{errors.title}}</h4>
    {{/if}}
    {{#if errors.text}}
    <h4 class="errors">*{{errors.text}}</h4>
    {{/if}}
  {{#if errors.type}}
    <h4 class="errors">*{{errors.type}}</h4>
  {{/if}}
</div>
{{/if}}



  <footer>
  <p>Copyright 2018</p>
  </footer>



