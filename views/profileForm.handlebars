<div class="wrapper">
    <form class="form-signin" method="post" action="http://localhost:5000/api/profile">
      <h2 class="form-signin-heading">Hey, {{user.name}} let people know about you through your profile.</h2>
      <input type="text" class="form-control" name="handle" placeholder="Handle" {{#if profile.handle}}value={{profile.handle}}{{/if}} autofocus="" />
      <input type="text" class="form-control" name="program" placeholder="What program are you in?" {{#if profile.program}}value={{profile.program}}{{/if}} autofocus="" />
      <input type="text" class="form-control" name="year" placeholder="What year are you in?" {{#if profile.year}}value={{profile.year}}{{/if}} />
      <textarea class="form-control" rows="5" name="bio" placeholder="Create a quick bio about yourself." >{{#if profile.bio}}{{profile.bio}}{{/if}}</textarea>
      <input type="text" class="form-control" name="twitter" placeholder="Twitter" {{#if profile.socials.twitter}}value={{profile.socials.twitter}}{{/if}}/>
      <input type="text" class="form-control" name="facebook" placeholder="Facebook"  {{#if profile.socials.facebook}}value={{profile.socials.facebook}}{{/if}}/>
      <input type="text" class="form-control" name="instagram" placeholder="Instagram"  {{#if profile.socials.instagram}}value={{profile.socials.instagram}}{{/if}}/>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
    </form>
  </div>
  {{#if errors}}
<div class="errors"
  {{#if errors.handle}}
<h4 class="errors">*{{errors.handle}}</h4>
{{/if}}
{{#if errors.program}}
<h4 class="errors">*{{errors.program}}</h4>
{{/if}}
{{#if errors.year}}
<h4 class="errors">*{{errors.year}}</h4>
{{/if}}
</div>
{{/if}}

